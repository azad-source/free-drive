{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "ES2020",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
